function loadNext(action, no) {
  $('li#next').html('<a herf="javascript:void(0)"><span style="width:100%;text-align:center;"><img src="/icookpad/images/ajax-loader.gif" style="position:relative;width:16px;height:16px;" />読み込み中…</span></a>');
  $.get("/icookpad/"+action+"/"+no, null, function(data) {
    var ul = $('li#next').parent();
    $('li#next').remove();
    ul.append(data);
  });
}
  </script>
